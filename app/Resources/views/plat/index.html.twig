{% extends 'base.html.twig' %}

{% block body %}
    <br><br><br><br>
    <h4 class="light center">Liste de vos plats</h4>
    <br><br><br><br>
    <table class="container">
        <thead>
        <tr>
            <th>Identifiant Plat</th>
            <th>Nom plat</th>
            <th>Categorie plat</th>
            <th>Description plat</th>
            <th>Duree de validité du plat</th>
            <th>Plat crée le</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for plat in plats %}
            <tr>
                <td class="center">{{ plat.idPlat }}</td>
                <td class="center">{{ plat.nomPlat }}</td>
                <td class="center">{{ plat.categoriePlat }}</td>
                <td class="center">{{ plat.descriptionPlat }}</td>
                <td class="center">{% if plat.dureeValide %}{{ plat.dureeValide|date('H:i:s') }}{% endif %}</td>
                <td class="center">{% if plat.creeA %}{{ plat.creeA|date('H:i:s') }}{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('plat_show', { 'id': plat.id }) }}">Voir</a>
                        </li>
                        <li>
                            <a href="{{ path('plat_edit', { 'id': plat.id }) }}">Modifier</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <br><br><br><br><br>

    <div class="row center">
        <div class="waves-effect waves-light btn light">
            <a class="white-text" href="{{ path('plat_new') }}">Poster un nouveau plat</a>
        </div>
    </div>
    <br><br><br><br>
{% endblock %}
